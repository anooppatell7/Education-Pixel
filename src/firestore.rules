
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // == HELPER FUNCTIONS ==

    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // In production, use custom claims: return request.auth.token.role == "superAdmin";
      // For this setup, we rely on a list of emails.
      return isAuth() && request.auth.token.email in ["admin@educationpixel.com", "anooppbh8@gmail.com", "ashishkumargiri51@gmail.com"];
    }

    function isFranchiseAdmin(franchiseId) {
      // This rule is more complex without claims, requires a read to user doc.
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'franchiseAdmin' 
                       && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.franchiseId == franchiseId;
    }
    
    function isAnyFranchiseAdmin() {
       return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'franchiseAdmin';
    }
    
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    function userBelongsToFranchise(franchiseId) {
        return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.franchiseId == franchiseId;
    }
    
    function isResultOwner(result) {
      return exists(/databases/$(database)/documents/examRegistrations/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/examRegistrations/$(request.auth.uid)).data.registrationNumber == result.registrationNumber;
    }

    // == CORE DATA ==

    match /users/{userId} {
      allow create, get, update: if isOwner(userId);
      allow read, write: if isSuperAdmin();
      allow list: if isAuth();
      allow delete: if false;
    }
    
    match /franchises/{franchiseId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    match /activityLogs/{logId} {
        allow create: if isAuth();
        allow read, delete: if isSuperAdmin();
    }

    // == STUDENT & EXAM DATA ==
    
    match /examRegistrations/{userId} {
        allow create: if isOwner(userId);
        allow get: if isOwner(userId);
        allow read, update: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
        allow list: if isAuth(); 
    }
    
    match /examResults/{resultId} {
        allow create: if isAuth();
        allow read: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId) || isResultOwner(resource.data);
        allow list: if true;
        allow delete: if isSuperAdmin();
    }
    
    match /certificates/{certId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /counters/{counterId} {
        allow read, write: if isAuth(); 
    }

    // == PUBLIC & SEMI-PUBLIC COLLECTIONS ==

    match /courses/{courseId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
     match /resources/{resourceId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
     match /blog/{postId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /youtubePlaylists/{playlistId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    // == FRANCHISE-RESTRICTED TEST CONTENT ==
    
    match /testCategories/{categoryId} {
        allow create: if isSuperAdmin() || isAnyFranchiseAdmin();
        allow read, list: if isAuth(); 
        allow update, delete: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
    }
    
     match /mockTests/{testId} {
        allow create: if isSuperAdmin() || isAnyFranchiseAdmin();
        allow read, list: if isAuth(); 
        allow update, delete: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
    }
    
    match /studentExams/{examId} {
        allow create: if isSuperAdmin() || isFranchiseAdmin(request.resource.data.franchiseId);
        allow get: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId) || (request.auth.uid in resource.data.allowedStudents);
        allow list: if isAuth();
        allow update: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
        allow delete: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
    }
    

    // == OTHER COLLECTIONS ==

    match /reviews/{reviewId} {
        allow create: if true;
        allow read: if resource.data.isApproved == true || isSuperAdmin();
        allow update, delete: if isSuperAdmin();
    }

    match /contacts/{contactId} {
        allow create: if true;
        allow read, delete: if isSuperAdmin();
    }
    match /enrollments/{enrollmentId} {
        allow create: if true;
        allow read, delete, update: if isSuperAdmin();
    }

    match /site_settings/{settingId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
  }
}
