
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // == HELPER FUNCTIONS ==

    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // In production, custom claims should be used.
      // For this setup, we rely on a list of hardcoded emails.
      return isAuth() && request.auth.token.email in ["admin@educationpixel.com", "anooppbh8@gmail.com", "ashishkumargiri51@gmail.com"];
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    // == CORE DATA ==

    match /users/{userId} {
      // User can create their own document during signup.
      allow create: if request.auth != null && request.auth.uid == userId;

      // User can read and update their own profile.
      allow get, update: if isOwner(userId);

      // Super Admins have full access. This no longer conflicts with create.
      allow read, write: if isSuperAdmin();

      // Nobody can list all users for security.
      allow list: if false;
    }
    
    match /franchises/{franchiseId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    match /activityLogs/{logId} {
        allow create: if isAuth();
        allow read, delete: if isSuperAdmin();
    }

    // == STUDENT & EXAM DATA ==
    
    match /examRegistrations/{userId} {
        allow create: if isOwner(userId);
        allow get: if isOwner(userId);
        allow read, update: if isSuperAdmin(); // Simplified for now. Franchise logic removed from here.
        allow list: if isAuth();
    }
    
    match /examResults/{resultId} {
        allow create: if isAuth();
        // User can read their own results.
        // Super Admin can read any result.
        allow read: if isSuperAdmin() 
                    || (isAuth() && request.auth.uid == resource.data.registrationNumber) // For mock tests
                    || (isAuth() && exists(/databases/$(database)/documents/examRegistrations/$(request.auth.uid)) && get(/databases/$(database)/documents/examRegistrations/$(request.auth.uid)).data.registrationNumber == resource.data.registrationNumber); // For official exams
        allow delete: if isSuperAdmin();
    }
    
    match /certificates/{certId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
    match /counters/{counterId} {
        allow read, write: if isAuth(); // Allow transaction access
    }

    // == PUBLIC & SEMI-PUBLIC COLLECTIONS ==

    match /courses/{courseId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
     match /resources/{resourceId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
     match /blog/{postId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /learningCourses/{courseId}/{document=**} {
      allow read: if isAuth();
      allow write: if isSuperAdmin();
    }
    
    match /youtubePlaylists/{playlistId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    match /testCategories/{categoryId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
     match /mockTests/{testId} {
        allow read: if isAuth();
        allow write: if isSuperAdmin();
    }
    
    match /studentExams/{examId} {
        allow read, write: if isSuperAdmin(); // Simplified for now
    }
    
    match /reviews/{reviewId} {
        allow create: if true;
        allow read: if resource.data.isApproved == true || isSuperAdmin();
        allow update, delete: if isSuperAdmin();
    }

    // == ADMIN-ONLY COLLECTIONS ==

    match /contacts/{contactId} {
        allow create: if true;
        allow read, delete: if isSuperAdmin();
    }
    match /enrollments/{enrollmentId} {
        allow create: if true;
        allow read, delete, update: if isSuperAdmin();
    }

    match /site_settings/{settingId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
  }
}
