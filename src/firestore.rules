
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // == HELPER FUNCTIONS ==

    function isAuth() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      // In production, use custom claims: return request.auth.token.role == "superAdmin";
      // For this setup, we rely on a list of emails.
      return isAuth() && request.auth.token.email in ["admin@educationpixel.com", "anooppbh8@gmail.com", "ashishkumargiri51@gmail.com"];
    }

    function isFranchiseAdmin(franchiseId) {
      // It's safe to use the user's email as the document ID here because we ensure it's set that way.
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'franchiseAdmin' 
                       && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.franchiseId == franchiseId;
    }
    
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    // == CORE DATA ==

    // Users collection stores role and franchise info.
    match /users/{userId} {
      // A user can create, read, and update their own document.
      allow read, write: if isOwner(userId);
      
      // Super Admins have full access.
      allow read, write: if isSuperAdmin();
    }
    
    // Franchises can only be created and managed by Super Admins, but read by anyone for signup.
    match /franchises/{franchiseId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
    
    // Activity logs are write-only for authenticated users, but only readable by Super Admins.
    match /activityLogs/{logId} {
        allow create: if isAuth();
        allow read, delete: if isSuperAdmin();
    }

    // == STUDENT & EXAM DATA ==
    
    // Student registration data.
    match /examRegistrations/{userId} {
        // Students can create their own registration.
        allow create: if isOwner(userId);
        
        // Student can read/update their own data. Admins can read/update registrations.
        allow read, update: if isOwner(userId) || isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
        
        // Franchise admins need to list their own students
        allow list: if isAuth() && (isSuperAdmin() || isFranchiseAdmin(request.query.franchiseId));
    }
    
    // Exam results for students.
    match /examResults/{resultId} {
        // Results are created by the system (or authenticated users during a test).
        allow create: if isAuth();

        // Public read is necessary for certificate verification.
        allow read: if true; 
        
        // Only Super Admins can delete results.
        allow delete: if isSuperAdmin();
    }
    
    // Certificates are read-only for the public, but writable only by Super Admins.
    match /certificates/{certId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
    
     // Counters for registration numbers
    match /counters/{counterId} {
        allow read, write: if isAuth(); // Allow transaction access for authenticated users
    }

    // == PUBLIC & SEMI-PUBLIC COLLECTIONS ==

    // Course and blog content is readable by anyone, but only writable by admins.
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
     match /resources/{resourceId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
     match /blog/{postId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Interactive learning content (courses, modules, lessons)
    match /learningCourses/{courseId}/{document=**} {
      allow read: if isAuth(); // Only logged-in users can access learning materials
      allow write: if isSuperAdmin();
    }
    
    match /youtubePlaylists/{playlistId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }

    // Test categories and mock tests are readable by anyone, writable by admin.
    match /testCategories/{categoryId} {
        allow read: if true;
        allow write: if isSuperAdmin() || isFranchiseAdmin(request.resource.data.franchiseId);
        allow update: if isSuperAdmin() || isFranchiseAdmin(resource.data.franchiseId);
    }
     match /mockTests/{testId} {
        allow read: if isAuth();
        allow create, update, delete: if isSuperAdmin() || isFranchiseAdmin(request.resource.data.franchiseId);
    }
    
    // studentExams are more restricted
    match /studentExams/{examId} {
      allow read: if isAuth();
      allow create, update: if isSuperAdmin() || 
                         (isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'franchiseAdmin' &&
                         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.franchiseId == request.resource.data.franchiseId);
      allow delete: if isSuperAdmin() || isFranchiseAdmin(get(/databases/$(database)/documents/studentExams/$(examId)).data.franchiseId);
    }
    
    // Reviews can be created by anyone, but only read publicly if approved.
    // Super Admins can manage all reviews.
    match /reviews/{reviewId} {
        allow create: if true;
        allow read: if resource.data.isApproved == true || isSuperAdmin();
        allow update, delete: if isSuperAdmin();
    }

    // == ADMIN-ONLY COLLECTIONS ==

    // Submissions from contact/enrollment forms
    // Only Super Admins can read/delete. Anyone can create.
    match /contacts/{contactId} {
        allow create: if true;
        allow read, delete: if isSuperAdmin();
    }
    match /enrollments/{enrollmentId} {
        allow create: if true;
        allow read, delete, update: if isSuperAdmin(); // Admin can mark as read
    }

    // Internal site settings
    match /site_settings/{settingId} {
        allow read: if true;
        allow write: if isSuperAdmin();
    }
  }
}
