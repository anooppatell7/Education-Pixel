
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // == HELPER FUNCTIONS ==
    // Checks if a user is authenticated.
    function isAuth() {
      return request.auth != null;
    }

    // Checks if the requesting user is the owner of the document.
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }
    
    // == USER PROFILES ==
    // Users can read and write to their own profile document.
    // No one else can read or write to it.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // == PUBLIC CONTENT ==
    // Any documents in a "public" collection are readable by everyone.
    // Only authenticated users can write/create/delete content.
    match /public/{document=**} {
      allow read: if true;
      allow write: if isAuth();
    }
    
    // == SUBMISSIONS ==
    // Anyone can create (submit) a document to this collection (e.g., contact form).
    // Only authenticated users (admins) can read or delete them.
    match /submissions/{submissionId} {
      allow create: if true;
      allow read, delete: if isAuth();
    }

    // == DEFAULT DENY ==
    // By default, deny all reads and writes to all documents.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
