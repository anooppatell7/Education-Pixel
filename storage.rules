rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for simplicity
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'exam_photos' directory
    match /exam_photos/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
